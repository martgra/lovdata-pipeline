# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================
DAGSTER_DEPLOYMENT=local

# ============================================================================
# LOVDATA / LOVLIG CONFIGURATION
# ============================================================================
# Dataset filter for lovlig sync (e.g., "gjeldende" for current law)
LOVDATA_DATASET_FILTER=gjeldende

# Directory for downloaded ZIP files
LOVDATA_RAW_DIR=./data/raw

# Directory for extracted XML files
LOVDATA_EXTRACTED_DIR=./data/extracted

# Path to lovlig state.json file
LOVDATA_STATE_FILE=./data/state.json

# Maximum concurrent downloads
LOVDATA_MAX_CONCURRENCY=4

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
# OpenAI API key for embeddings (development)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI API key for production
OPENAI_API_KEY_PROD=sk-your-prod-api-key-here

# Embedding model to use
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# ============================================================================
# CHROMADB CONFIGURATION
# ============================================================================
# Directory for ChromaDB persistence
CHROMADB_PERSIST_DIR=./data/chromadb

# Collection name for legal documents
CHROMADB_COLLECTION_NAME=lovdata_legal_docs

# Distance metric for similarity search
CHROMADB_DISTANCE_METRIC=cosine

# ============================================================================
# LANGFUSE CONFIGURATION
# ============================================================================
# Langfuse public key
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here

# Langfuse secret key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here

# Langfuse host (cloud or self-hosted)
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================================================
# PROCESSING CONFIGURATION
# ============================================================================
# Batch size for embedding generation
BATCH_SIZE_EMBEDDINGS=100

# Batch size for ChromaDB operations
BATCH_SIZE_CHROMADB=5000

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# Rate limit delay between batches (seconds)
RATE_LIMIT_DELAY=1.0
